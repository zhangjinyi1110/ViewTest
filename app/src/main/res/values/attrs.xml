<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="textSize" format="dimension"/>
    <attr name="text" format="string"/>
    <attr name="textColor" format="color"/>
    <attr name="hintText" format="string"/>

    <declare-styleable name="CircleText">
        <attr name="text"/>
        <attr name="textSize"/>
        <attr name="textColor"/>
        <attr name="textBackground" format="color"/>
    </declare-styleable>

    <declare-styleable name="SearchView">
        <attr name="hintText"/>
        <attr name="textSize"/>
        <attr name="textColor"/>
        <attr name="background"/>
        <attr name="searchImage" format="reference"/>
        <attr name="searchCleanIcon" format="reference"/>
        <attr name="layoutBackground" format="reference|color"/>
    </declare-styleable>

    <declare-styleable name="SpringView">
        <attr name="minRadius" format="dimension"/>
        <attr name="maxRadius" format="dimension"/>
        <attr name="maxLength" format="dimension"/>
        <attr name="springColor" format="color"/>
        <attr name="numText" format="string"/>
    </declare-styleable>

    <declare-styleable name="LoadButton">
        <attr name="radius" format="dimension"/>
        <attr name="length" format="dimension"/>
        <attr name="message" format="string"/>
    </declare-styleable>
    
    <declare-styleable name="BottomView">
        <attr name="icon" format="reference"/>
        <attr name="name" format="string"/>
    </declare-styleable>

    <declare-styleable name="CalendarItemView">
        <attr name="month">
            <enum name="a" value="0"/>
            <enum name="b" value="1"/>
            <enum name="c" value="2"/>
            <enum name="d" value="3"/>
            <enum name="e" value="4"/>
            <enum name="f" value="5"/>
            <enum name="g" value="6"/>
            <enum name="h" value="7"/>
            <enum name="i" value="8"/>
            <enum name="j" value="9"/>
            <enum name="k" value="10"/>
            <enum name="l" value="11"/>
        </attr>
        <attr name="year" format="integer"/>
        <attr name="day" format="integer"/>
    </declare-styleable>
</resources>